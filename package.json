{
  "name": "github-task-manager",
  "version": "1.0.0",
  "description": "Collaborative task management system integrated with GitHub for public collaboration",
  "main": "public/scripts/task-manager-app.js",
  "scripts": {
    "start": "npx serve public -l 3000",
    "test": "node tests/run-tests.js",
    "test:validate": "node tests/validate-schema.js",
    "test:watch": "node tests/run-tests.js --watch",
    "test:playwright": "playwright test --config=tests/playwright.config.js",
    "test:playwright:ui": "playwright test --ui --config=tests/playwright.config.js",
    "test:playwright:headed": "playwright test --headed --config=tests/playwright.config.js",
    "test:playwright:debug": "playwright test --debug --config=tests/playwright.config.js",
    "test:playwright:report": "playwright test --reporter=html --config=tests/playwright.config.js && npx playwright show-report",
    "test:all": "npm run test && npm run test:validate && npm run test:playwright",
    "lint": "eslint public/scripts/*.js public/config/*.js",
    "format": "prettier --write \"public/**/*.{js,css,html,json}\"",
    "validate": "node tests/validate-schema.js",
    "deploy": "gh-pages -d public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nlarchive/github-task-manager.git"
  },
  "keywords": [
    "task-manager",
    "github",
    "project-management",
    "collaboration"
  ],
  "author": "nlarchive",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nlarchive/github-task-manager/issues"
  },
  "homepage": "https://nlarchive.github.io/github-task-manager",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^8.56.0",
    "gh-pages": "^6.1.0",
    "prettier": "^3.2.0",
    "serve": "^14.2.0"
  }
}
